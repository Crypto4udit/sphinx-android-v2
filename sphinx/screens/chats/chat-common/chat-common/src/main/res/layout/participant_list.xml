<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:radius="20dp"
        android:src="@drawable/ic_baseline_person_32"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/participantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_weight="1"/>

    <!-- Camera Status -->
    <ImageView
        android:id="@+id/cameraStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/outline_videocam_off_24"/>

    <!-- Mic Status -->
    <ImageView
        android:id="@+id/micStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/outline_mic_off_24"/>
</LinearLayout>
